{{#each errors}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        {{text}}
        <strong></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}


<div class="card">
    <div class="card-header">
        <h3>New Product</h3>
    </div>
    <div class="card-body">
        <form action="/products/new-product" method="POST">
            <!-- Name -->
            <div class="form-group">
                <input type="text" name="name" class="from-control" placeholder="Name" autofocus>
            </div>
            <!-- Category -->
            <div class="form-group">
                <input type="text" name="category" class="from-control" placeholder="Category" autofocus>
            </div>
            <!-- Price -->
            <div class="form-group">
                <input type="number" name="price" class="from-control" placeholder="Price" autofocus>
            </div>
            <!-- Description -->
            <div class="form-group">
                <textarea name="description" class="form-control" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>